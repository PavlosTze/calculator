<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="10dp" android:top="10dp">
                <shape>
                    <corners android:radius="7dp" />
                    <solid android:color="#2d9e3c" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#2d9e3c" android:startColor="#114a18"
                        android:centerX="10%"      android:centerColor="#238331"/>
                    <stroke android:width="1dp" android:color="#114a18" />
                    <corners android:radius="7dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>