<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7aa76">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GridLayout"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        android:background="#bca577">

    <ImageButton
        android:id="@+id/themeGreyBlue"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_row="0"
        android:background="#bca577"
        android:onClick="@string/onClick"
        android:src="@drawable/ic_greyblue"
        android:text="@string/activityMain" />

    <ImageButton
        android:id="@+id/themeGreyGreen"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="top|right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_row="0"
        android:background="#bca577"
        android:onClick="@string/onClick"
        android:src="@drawable/ic_greygreen"
        android:text="@string/activityMainGreen" />

    <ImageButton
        android:id="@+id/themeDarkModern"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:layout_marginBottom="10dp"
        android:layout_row="1"
        android:background="#bca577"
        android:onClick="@string/onClick"
        android:src="@drawable/ic_darkmodern"
        android:text="@string/activityMainDarkModern" />

    <ImageButton
        android:id="@+id/themeLightModern"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="top|right"
        android:layout_marginBottom="10dp"
        android:layout_row="1"
        android:background="#bca577"
        android:onClick="@string/onClick"
        android:src="@drawable/ic_lightmodern"
        android:text="@string/activityMainLightModern" />

    <ImageButton
        android:id="@+id/themeGreyPink"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:layout_row="2"
        android:background="#bca577"
        android:onClick="@string/onClick"
        android:src="@drawable/ic_greypink"
        android:text="@string/activityMainPink" />

    <ImageButton
        android:id="@+id/themePinkModern"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="top"
        android:layout_row="2"
        android:background="#bca577"
        android:onClick="@string/onClick"
        android:src="@drawable/ic_yellowmodern"
        android:text="@string/activityMainPinkModern" />

    </GridLayout>

</ScrollView>