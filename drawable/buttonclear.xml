<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item android:right="10dp" android:top="10dp">
            <shape>
                <corners android:radius="7dp" />
                <solid android:color="#FFA41C" />
            </shape>
        </item>
        <item android:bottom="2dp" android:left="2dp">
            <shape>
                <gradient android:angle="90"
                    android:endColor="#000000" android:startColor="#FFA41C"
                    android:centerX="90%"      android:centerColor="#d58e24"/>
                <stroke android:width="1dp" android:color="#0E273B" />
                <corners android:radius="7dp" />
                <padding android:bottom="10dp" android:left="10dp"
                    android:right="10dp" android:top="10dp" />
            </shape>
        </item>
    </layer-list>
</item>

</selector>